{
  "name": "klay-core",
  "version": "2.4.0",
  "description": "Isomorphic and extensible validation library for JavaScript.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "build:docs": "typedoc --mode file --out ./docs ./lib",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lint",
    "test:unit": "mocha --require source-map-support/register 'test/**/*.test.js'",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "npm run test:unit -- --watch --reporter dot",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "keywords": [
    "validation"
  ],
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay/tree/master/packages/klay-core#readme",
  "dependencies": {
    "lodash": "^4.14.93"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.3",
    "@types/lodash": "^4.14.93",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "semantic-release": "^11.1.0",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.2",
    "tslint": "^5.9.1",
    "typedoc": "^0.10.0",
    "typescript": "2.8.0-rc"
  },
  "config": {
    "tslint": {
      "rules": {
        "whitespace": false,
        "newline-per-chained-call": false,
        "only-arrow-functions": false,
        "no-empty": [
          true,
          "allow-empty-catch"
        ],
        "no-void-expression": false,
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
