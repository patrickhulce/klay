{
  "name": "klay",
  "version": "0.0.0",
  "description": "Isomorphic and extensible validation library for JavaScript.",
  "main": "./lib/klay.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "test": "npm run test:lint && npm run test:tslint && npm run test:unit",
    "test:lint": "lint",
    "test:tslint": "lint -t typescript './lib-ts/**/*.ts' --ignore ''",
    "test:unit": "mocha --reporter spec --require test/bootstrap 'test/**/*.test.js'",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot --require test/bootstrap 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "keywords": [
    "validation"
  ],
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay#readme",
  "dependencies": {
    "@types/lodash": "^4.14.93",
    "lodash": "^4.13.1"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.1",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "istanbul": "^0.4.4",
    "mocha": "^5.0.0",
    "semantic-release": "v11.1.0",
    "sinon": "^4.1.6",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "config": {
    "eslint": {
      "globals": [
        "defineTest",
        "relativeRequire",
        "testPassingValues",
        "testFailingValues"
      ]
    },
    "tslint": {
      "rules": {
        "whitespace": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
