{
  "name": "klay-kiln-sql",
  "version": "2.4.0",
  "description": "Kiln extension to generate SQL models from Klay models.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:lint && npm run test:unit",
    "test:db": "KLAY_MYSQL_DB=klay_kiln_sql KLAY_MYSQL_USER=root npm test",
    "test:lint": "lint",
    "test:unit": "mocha --require source-map-support/register 'test/**/*.test.js'",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "npm run test:unit -- --watch --reporter dot",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay/tree/master/packages/klay-kiln-sql#readme",
  "config": {
    "tslint": {
      "rules": {
        "curly": false,
        "whitespace": false,
        "newline-per-chained-call": false,
        "only-arrow-functions": false,
        "no-void-expression": false,
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "eslint": {
      "globals": [
        "describesql",
        "defineTest"
      ],
      "rules": {
        "camelcase": 0
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/sequelize": "^4.27.7",
    "bluebird": "^3.5.1",
    "klay-core": "^2.4.0",
    "klay-db": "^2.4.0",
    "klay-kiln": "^2.4.0",
    "lodash": "^4.15.0",
    "sequelize": "^4.33.4"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.3",
    "@types/bluebird": "^3.5.20",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cz-conventional-changelog": "^1.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "mysql2": "^1.5.2",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "source-map-support": "^0.5.3",
    "tslint": "^5.9.1",
    "typescript": "2.8.0-rc"
  }
}
