{
  "name": "klay-db",
  "version": "2.4.0",
  "description": "Extensions for klay to add generic information typically used for database interactions.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lint",
    "test:unit": "mocha --require source-map-support/register 'test/**/*.test.js'",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "npm run test:unit -- --watch --reporter dot",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay/tree/master/packages/klay-db#readme",
  "config": {
    "tslint": {
      "rules": {
        "curly": false,
        "whitespace": false,
        "newline-per-chained-call": false,
        "only-arrow-functions": false,
        "no-empty": [
          true,
          "allow-empty-catch"
        ],
        "no-void-expression": false,
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "klay-core": "^2.4.0",
    "lodash": "^4.17.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.3",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cz-conventional-changelog": "^1.2.0",
    "klay-core": "^2.4.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "semantic-release": "^11.2.0",
    "sinon": "^4.2.3",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.3",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}
