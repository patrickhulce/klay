{
  "name": "klay-db",
  "version": "0.0.0",
  "description": "Extensions for klay to add generic information typically used for database interactions.",
  "main": "./lib/extension.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:aliases": "generate-export-aliases",
    "build:ts": "tsc",
    "test": "npm run test:lint && npm run test:tslint && npm run test:unit",
    "test:lint": "lint -t test './test/**.test.js'",
    "test:tslint": "lint -t typescript './lib/**/*.ts' --ignore './lib/**/*.d.ts'",
    "test:unit": "mocha --reporter spec --require source-map-support/register 'test/**/*.test.js'",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot 'test/**/*.test.js'",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay-db.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay-db/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay-db#readme",
  "config": {
    "tslint": {
      "rules": {
        "curly": false,
        "whitespace": false,
        "newline-per-chained-call": false,
        "only-arrow-functions": false,
        "no-empty": [
          true,
          "allow-empty-catch"
        ],
        "no-void-expression": false,
        "no-unsafe-any": false,
        "no-any": false
      }
    },
    "exportAliases": {
      "helpers": "./lib/helpers/index.js",
      "options": "./lib/options.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "eslint": {
      "globals": [
        "defineTest"
      ]
    }
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.2",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^1.2.0",
    "generate-export-aliases": "^1.0.0",
    "istanbul": "^0.4.5",
    "klay": "^2.4.0",
    "mocha": "^5.0.0",
    "semantic-release": "^11.2.0",
    "sinon": "^4.2.3",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.3",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "peerDependencies": {
    "klay": "^1.2.0"
  }
}
