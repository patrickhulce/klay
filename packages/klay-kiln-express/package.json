{
  "name": "klay-kiln-express",
  "description": "Kiln extension to generate express middleware from klay models.",
  "main": "./lib/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lint",
    "test:unit": "mocha --reporter spec --require test/bootstrap 'test/**/*.test.js'",
    "test:db": "KLAY_MYSQL_DB=klay_kiln_express KLAY_MYSQL_USER=root npm test",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot --require test/bootstrap 'test/**/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "express": "^4.16.2",
    "klay": "^2.4.0",
    "lodash": "^4.16.2"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.3",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "mocha": "^5.0.0",
    "mysql": "^2.11.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "supertest": "patrickhulce/supertest"
  }
}
