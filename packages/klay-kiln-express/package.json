{
  "name": "klay-kiln-express",
  "description": "Kiln extension to generate express middleware from klay models.",
  "main": "./lib/index.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "xo './lib/**/*.js'",
    "test:unit": "mocha --reporter spec --require test/bootstrap 'test/**/*.test.js'",
    "test:db": "KLAY_MYSQL_DB=klay_kiln_express KLAY_MYSQL_USER=root npm test",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot --require test/bootstrap 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay-kiln-express.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay-kiln-express/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay-kiln-express#readme",
  "xo": {
    "env": [
      "node",
      "mocha"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "express": "^4.14.0",
    "klay": "^1.2.4",
    "lodash": "^4.16.2"
  },
  "peerDependencies": {
    "klay-kiln": "^1.2.0"
  },
  "devDependencies": {
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "istanbul": "^0.4.5",
    "klay-db": "^1.0.0",
    "klay-kiln": "^1.2.0",
    "klay-kiln-sql": "^1.2.0",
    "mocha": "^3.1.0",
    "mysql": "^2.11.1",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "supertest": "patrickhulce/supertest",
    "xo": "patrickhulce/xo#master"
  }
}
