{
  "name": "klay-kiln-express",
  "version": "2.4.0",
  "description": "Kiln extension to generate express middleware from klay models.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "lint",
    "test:unit": "jest",
    "test:watch": "npm run test:unit -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay#readme",
  "config": {
    "tslint": {
      "rules": {
        "no-parameter-reassignment": false,
        "no-unsafe-any": false,
        "return-undefined": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
		"testMatch": [
			"**/*.test.js"
		]
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "express": "^4.16.2",
    "klay-core": "^2.4.0",
    "klay-db": "^2.4.0",
    "klay-kiln": "^2.4.0",
    "lodash": "^4.16.2"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.3",
    "@types/express": "^4.11.1",
    "body-parser": "^1.15.2",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^1.2.0",
    "jest": "^22.4.3",
    "mocha": "^5.0.0",
    "mysql": "^2.11.1",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "supertest": "patrickhulce/supertest",
    "tslint": "^5.9.1",
    "typescript": "2.8.0-rc",
    "uuid": "^3.2.1"
  }
}
