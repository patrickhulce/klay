{
  "name": "klay-kiln",
  "version": "0.0.0",
  "description": "Library for using klay models together and generating useful objects with them.",
  "main": "./lib/kiln.js",
  "types": "./lib/kiln.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "npm run test:tslint && npm run test:lint && npm run test:unit",
    "test:lint": "lint -t test 'test/**/*.test.js'",
    "test:tslint": "lint -t typescript 'lib/**/*.ts' --ignore './lib/**/*.d.ts'",
    "test:unit": "mocha 'test/**/*.test.js'",
    "test:coverage": "nyc npm run test:unit",
    "test:watch": "npm run test:unit -- --watch --reporter dot",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay-kiln.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay-kiln/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay-kiln#readme",
  "config": {
    "tslint": {
      "rules": {
        "whitespace": false,
        "newline-per-chained-call": false,
        "only-arrow-functions": false,
        "no-empty": [
          true,
          "allow-empty-catch"
        ],
        "no-void-expression": false,
        "no-any": false
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "@patrickhulce/lint": "^2.0.2",
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "klay": "^2.4.0",
    "mocha": "^3.0.2",
    "nyc": "^11.4.1",
    "semantic-release": "^11.2.0",
    "sinon": "^1.17.5",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "peerDependencies": {
    "klay": "^2.4.0"
  }
}
