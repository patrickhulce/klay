{
  "name": "klay-kiln",
  "version": "0.0.0",
  "description": "Library for using klay models together and generating useful objects with them.",
  "main": "./lib/kiln.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "xo './lib/**/*.js'",
    "test:unit": "mocha --reporter spec --require test/bootstrap 'test/**/*.test.js'",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot --require test/bootstrap 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay-kiln.git"
  },
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay-kiln/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay-kiln#readme",
  "xo": {
    "env": [
      "node",
      "mocha"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.15.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "xo": "patrickhulce/xo#master"
  }
}
