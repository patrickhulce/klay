{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna exec --parallel 'rm -fR dist/'",
    "build": "npm run clean && lerna run build",
    "build:watch": "lerna exec --parallel 'tsc -w'",
    "build:docs": "lerna exec ../../scripts/build-docs.sh",
    "test": "npm run build && npm run test:lint && npm run test:unit",
    "test:lint": "tslint --project . -c tslint.json",
    "test:unit": "jest --forceExit",
    "test:watch": "npm run test:unit -- --watch"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "lerna": "^2.9.1",
    "semver": "^5.5.0",
    "ts-jest": "^22.4.2",
    "typedoc": "^0.10.0",
    "typescript": "^2.8.1"
  }
}
