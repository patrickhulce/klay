{
  "name": "klay",
  "version": "0.0.0",
  "description": "Isomorphic and extensible validation library for JavaScript.",
  "main": "./lib/klay.js",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "xo './lib/**/*.js'",
    "test:unit": "mocha --reporter spec --require test/bootstrap 'test/**/*.test.js'",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --require test/bootstrap 'test/**/*.test.js'",
    "test:watch": "mocha --watch --reporter dot --require test/bootstrap 'test/**/*.test.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickhulce/klay.git"
  },
  "keywords": [
    "validation"
  ],
  "author": "Patrick Hulce <patrick.hulce@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patrickhulce/klay/issues"
  },
  "homepage": "https://github.com/patrickhulce/klay#readme",
  "dependencies": {
    "lodash": "^4.13.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "cz-conventional-changelog": "^1.1.6",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "semantic-release": "^6.3.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "xo": "patrickhulce/xo#master"
  },
  "xo": {
    "env": [
      "browser",
      "node",
      "mocha"
    ],
    "space": 2,
    "rules": {
      "complexity": [
        "warn",
        10
      ],
      "xo/filename-case": 0,
      "no-else-return": 0,
      "max-statements-per-line": [
        "error",
        {
          "max": 2
        }
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "dot-location": [
        "error",
        "object"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
